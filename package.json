{
  "name": "@advanced-rest-client/arc-events",
  "description": "A library adding navigation events definitions to Advanced REST Client",
  "version": "0.2.3",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "authors": [
    "Pawel Psztyc"
  ],
  "contributors": [
    "Your name can be here!"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/arc-events.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/arc-events/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/arc-types": "^0.2.13"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-data-generator": "^3.1.11",
    "@advanced-rest-client/arc-demo-helper": "^2.2.0",
    "@advanced-rest-client/testing-karma-sl": "^1.4.2",
    "@open-wc/eslint-config": "^4.0.0",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/testing-karma": "^4.0.9",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.8",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "sinon": "^9.2.1",
    "typescript": "^4.0.5",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "scripts": {
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:types": "tsc",
    "lint": "npm run lint:eslint",
    "format": "npm run format:eslint",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --compatibility auto --coverage"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "test/**/*.js"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "no-plusplus": "off",
          "no-param-reassing": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
